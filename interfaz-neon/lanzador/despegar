#!/bin/bash

# Resolve the project root based on this script's location
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
PROJECT_ROOT="$(cd "${SCRIPT_DIR}/.." && pwd)"
QML_FILE="$PROJECT_ROOT/quantum/main.qml"

echo "üöÄ Iniciando EL CAF√â SIN L√çMITES v2.0 FINAL..."
echo "üìÇ Ruta del m√≥dulo: $PROJECT_ROOT"
echo "üìÑ Archivo: quantum/main.qml"
echo ""

export QML2_IMPORT_PATH="$PROJECT_ROOT"

if command -v qmlscene &> /dev/null; then
    echo "‚úÖ Arrancando con Qt5..."
    qmlscene "$QML_FILE"
else
    echo "‚ùå ERROR: qmlscene no encontrado"
    echo "Instala: sudo apt install qtdeclarative5-dev-tools"
    exit 1
fi
